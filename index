  <!-- ===================== JavaScript ===================== -->
  <script>
        /* ‡∏Ñ‡πà‡∏≤‡∏Ñ‡∏≠‡∏ô‡∏ü‡∏¥‡∏Å‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô (‡∏£‡∏≠‡∏á‡∏£‡∏±‡∏ö‡∏Å‡∏≤‡∏£‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏ú‡πà‡∏≤‡∏ô Element SDK) */
        const defaultConfig = {
            competition_title: "RMUTT Mathematics Competition 2025",
            thai_title: "‡πÇ‡∏Ñ‡∏£‡∏á‡∏Å‡∏≤‡∏£‡∏õ‡∏£‡∏∞‡∏ä‡∏±‡∏ô‡∏Ñ‡∏°‡∏Ñ‡∏¥‡∏î‡∏û‡∏¥‡∏ä‡∏¥‡∏ï‡πÇ‡∏à‡∏ó‡∏¢‡πå‡∏Ñ‡∏ì‡∏¥‡∏ï‡∏®‡∏≤‡∏™‡∏ï‡∏£‡πå RMUTT",
            hero_description: "‡∏Å‡∏≤‡∏£‡πÅ‡∏Ç‡πà‡∏á‡∏Ç‡∏±‡∏ô‡∏Ñ‡∏ì‡∏¥‡∏ï‡∏®‡∏≤‡∏™‡∏ï‡∏£‡πå‡∏£‡∏∞‡∏î‡∏±‡∏ö‡∏°‡∏´‡∏≤‡∏ß‡∏¥‡∏ó‡∏¢‡∏≤‡∏•‡∏±‡∏¢ ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏™‡πà‡∏á‡πÄ‡∏™‡∏£‡∏¥‡∏°‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏ó‡∏≤‡∏á‡∏Ñ‡∏ì‡∏¥‡∏ï‡∏®‡∏≤‡∏™‡∏ï‡∏£‡πå ‡πÅ‡∏•‡∏∞‡∏û‡∏±‡∏í‡∏ô‡∏≤‡∏ó‡∏±‡∏Å‡∏©‡∏∞‡∏Å‡∏≤‡∏£‡∏Ñ‡∏¥‡∏î‡∏ß‡∏¥‡πÄ‡∏Ñ‡∏£‡∏≤‡∏∞‡∏´‡πå‡∏Ç‡∏≠‡∏á‡∏ô‡∏±‡∏Å‡∏®‡∏∂‡∏Å‡∏©‡∏≤",
            register_button: "‡∏™‡∏°‡∏±‡∏Ñ‡∏£‡πÅ‡∏Ç‡πà‡∏á‡∏Ç‡∏±‡∏ô",
            login_button: "‡πÄ‡∏Ç‡πâ‡∏≤‡∏™‡∏π‡πà‡∏£‡∏∞‡∏ö‡∏ö‡∏ú‡∏π‡πâ‡∏™‡∏≠‡∏ö",
            primary_color: "#1e40af",
            secondary_color: "#dbeafe",
            text_color: "#1f2937",
            background_color: "#f8f9fa",
            accent_color: "#1e3a8a",
            font_family: "Inter",
            font_size: 16
        };

        /* ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏Ñ‡∏ß‡∏ö‡∏Ñ‡∏∏‡∏°‡∏Å‡∏≤‡∏£‡∏ô‡∏≥‡∏ó‡∏≤‡∏á‡πÅ‡∏ö‡∏ö Single Page:
           - ‡∏Ñ‡∏•‡∏¥‡∏Å‡πÄ‡∏°‡∏ô‡∏π‡πÅ‡∏•‡πâ‡∏ß‡∏™‡∏•‡∏±‡∏ö class .active ‡∏ó‡∏µ‡πà‡πÄ‡∏°‡∏ô‡∏π‡πÅ‡∏•‡∏∞‡∏´‡∏ô‡πâ‡∏≤‡∏õ‡∏•‡∏≤‡∏¢‡∏ó‡∏≤‡∏á
           - ‡∏õ‡∏∏‡πà‡∏°‡∏ó‡∏µ‡πà‡∏°‡∏µ data-page (‡πÅ‡∏ï‡πà‡πÑ‡∏°‡πà‡πÉ‡∏ä‡πà‡∏•‡∏¥‡∏á‡∏Å‡πå‡πÄ‡∏°‡∏ô‡∏π) ‡∏Å‡πá‡∏™‡∏•‡∏±‡∏ö‡∏´‡∏ô‡πâ‡∏≤‡πÑ‡∏î‡πâ‡πÄ‡∏´‡∏°‡∏∑‡∏≠‡∏ô‡∏Å‡∏±‡∏ô */
        document.addEventListener('DOMContentLoaded', function() {
            const navLinks = document.querySelectorAll('.nav-link');
            const pages = document.querySelectorAll('.main-content');

            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // ‡∏•‡πâ‡∏≤‡∏á active ‡∏à‡∏≤‡∏Å‡∏ó‡∏∏‡∏Å‡∏•‡∏¥‡∏á‡∏Å‡πå‡πÅ‡∏•‡∏∞‡∏ó‡∏∏‡∏Å‡∏´‡∏ô‡πâ‡∏≤
                    navLinks.forEach(l => l.classList.remove('active'));
                    pages.forEach(p => p.classList.remove('active'));
                    
                    // ‡∏ó‡∏≥ active ‡πÉ‡∏´‡πâ‡∏•‡∏¥‡∏á‡∏Å‡πå‡∏ó‡∏µ‡πà‡∏Ñ‡∏•‡∏¥‡∏Å
                    this.classList.add('active');
                    
                    // ‡πÅ‡∏™‡∏î‡∏á‡∏´‡∏ô‡πâ‡∏≤‡∏ó‡∏µ‡πà‡∏ï‡∏£‡∏á‡∏Å‡∏±‡∏ö data-page
                    const targetPage = this.getAttribute('data-page');
                    document.getElementById(targetPage).classList.add('active');
                });
            });

            // ‡∏£‡∏≠‡∏á‡∏£‡∏±‡∏ö‡∏õ‡∏∏‡πà‡∏°‡∏≠‡∏∑‡πà‡∏ô ‡πÜ ‡∏ó‡∏µ‡πà‡∏°‡∏µ data-page (‡πÄ‡∏ä‡πà‡∏ô‡∏õ‡∏∏‡πà‡∏°‡∏™‡∏°‡∏±‡∏Ñ‡∏£/‡∏ú‡∏•‡∏™‡∏≠‡∏ö)
            document.querySelectorAll('[data-page]').forEach(button => {
                if (!button.classList.contains('nav-link')) {
                    button.addEventListener('click', function(e) {
                        e.preventDefault();
                        
                        // ‡∏•‡πâ‡∏≤‡∏á active ‡∏à‡∏≤‡∏Å‡∏ó‡∏∏‡∏Å‡∏•‡∏¥‡∏á‡∏Å‡πå‡πÅ‡∏•‡∏∞‡∏ó‡∏∏‡∏Å‡∏´‡∏ô‡πâ‡∏≤
                        navLinks.forEach(l => l.classList.remove('active'));
                        pages.forEach(p => p.classList.remove('active'));
                        
                        // ‡∏´‡∏≤‡∏•‡∏¥‡∏á‡∏Å‡πå‡πÄ‡∏°‡∏ô‡∏π‡∏ó‡∏µ‡πà‡∏ï‡∏£‡∏á‡∏´‡∏ô‡πâ‡∏≤‡πÄ‡∏õ‡πâ‡∏≤‡∏´‡∏°‡∏≤‡∏¢ ‡πÅ‡∏•‡πâ‡∏ß‡∏ó‡∏≥ active
                        const targetPage = this.getAttribute('data-page');
                        const targetNavLink = document.querySelector(`.nav-link[data-page="${targetPage}"]`);
                        if (targetNavLink) targetNavLink.classList.add('active');
                        
                        // ‡πÅ‡∏™‡∏î‡∏á‡∏´‡∏ô‡πâ‡∏≤‡∏õ‡∏•‡∏≤‡∏¢‡∏ó‡∏≤‡∏á
                        document.getElementById(targetPage).classList.add('active');
                    });
                }
            });
        });

        /* onConfigChange: ‡∏ñ‡∏π‡∏Å‡πÄ‡∏£‡∏µ‡∏¢‡∏Å‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏Ñ‡πà‡∏≤‡∏Ñ‡∏≠‡∏ô‡∏ü‡∏¥‡∏Å‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô (‡∏à‡∏≤‡∏Å Element SDK)
           - ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏° ‡∏õ‡∏∏‡πà‡∏° ‡πÅ‡∏•‡∏∞‡∏ò‡∏µ‡∏°‡∏™‡∏µ/‡∏ü‡∏≠‡∏ô‡∏ï‡πå ‡∏î‡πâ‡∏ß‡∏¢‡∏Ñ‡πà‡∏≤‡πÉ‡∏´‡∏°‡πà‡πÅ‡∏ö‡∏ö‡πÑ‡∏î‡∏ô‡∏≤‡∏°‡∏¥‡∏Å */
        async function onConfigChange(config) {
            // ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏´‡∏±‡∏ß‡∏Ç‡πâ‡∏≠‡πÉ‡∏´‡∏ç‡πà‡∏Ç‡∏≠‡∏á hero (‡πÉ‡∏ä‡πâ innerHTML ‡πÄ‡∏û‡∏£‡∏≤‡∏∞‡∏°‡∏µ <br> ‡πÅ‡∏•‡∏∞ span.highlight)
            const heroTitle = document.querySelector('.hero-content h1');
            if (heroTitle) {
                heroTitle.innerHTML = `
                    <span class="highlight">RMUTT</span> Mathematics<br>
                    <span class="highlight">Competition</span> 2025
                `;
            }

            // ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏¢‡πà‡∏≠‡∏¢
            const thaiTitle = document.querySelector('.thai-title');
            if (thaiTitle) thaiTitle.textContent = config.thai_title || defaultConfig.thai_title;

            const description = document.querySelector('.description');
            if (description) description.textContent = config.hero_description || defaultConfig.hero_description;

            // ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏õ‡∏∏‡πà‡∏°
            const registerBtn = document.querySelector('.btn-primary');
            if (registerBtn) registerBtn.textContent = config.register_button || defaultConfig.register_button;

            const loginBtn = document.querySelector('.btn-secondary');
            if (loginBtn) loginBtn.textContent = config.login_button || defaultConfig.login_button;

            // ‡∏™‡∏µ‡∏ò‡∏µ‡∏° (‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏ï‡∏±‡∏ß‡πÅ‡∏õ‡∏£ CSS ‡∏ó‡∏µ‡πà :root)
            const primaryColor = config.primary_color || defaultConfig.primary_color;
            const secondaryColor = config.secondary_color || defaultConfig.secondary_color;
            const textColor = config.text_color || defaultConfig.text_color;
            const backgroundColor = config.background_color || defaultConfig.background_color;
            const accentColor = config.accent_color || defaultConfig.accent_color;

            document.documentElement.style.setProperty('--royal-blue', primaryColor);
            document.documentElement.style.setProperty('--light-blue', secondaryColor);
            document.documentElement.style.setProperty('--text-dark', textColor);
            document.documentElement.style.setProperty('--porcelain', backgroundColor);
            document.documentElement.style.setProperty('--navy-blue', accentColor);

            // ‡∏ü‡∏≠‡∏ô‡∏ï‡πå‡πÅ‡∏•‡∏∞‡∏Ç‡∏ô‡∏≤‡∏î‡∏ê‡∏≤‡∏ô
            const customFont = config.font_family || defaultConfig.font_family;
            const baseSize = config.font_size || defaultConfig.font_size;
            document.body.style.fontFamily = `${customFont}, Arial, sans-serif`;
            document.body.style.fontSize = `${baseSize}px`;

            // ‡∏™‡πÄ‡∏Å‡∏•‡∏´‡∏±‡∏ß‡∏Ç‡πâ‡∏≠/‡∏´‡∏±‡∏ß‡πÄ‡∏£‡∏∑‡πà‡∏≠‡∏á‡∏ï‡πà‡∏≤‡∏á ‡πÜ ‡∏ï‡∏≤‡∏° baseSize
            const heroH1 = document.querySelector('.hero-content h1');
            if (heroH1) heroH1.style.fontSize = `${baseSize * 2.2}px`;

            const pageTitles = document.querySelectorAll('.page-title');
            pageTitles.forEach(title => title.style.fontSize = `${baseSize * 1.6}px`);

            const sectionTitles = document.querySelectorAll('.section-title');
            sectionTitles.forEach(title => title.style.fontSize = `${baseSize * 1.2}px`);
        }

        /* mapToCapabilities: ‡∏£‡∏∞‡∏ö‡∏∏‡∏™‡∏¥‡πà‡∏á‡∏ó‡∏µ‡πà‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡πÑ‡∏î‡πâ‡∏à‡∏≤‡∏Å‡πÅ‡∏ú‡∏á‡∏Ñ‡∏ß‡∏ö‡∏Ñ‡∏∏‡∏°‡∏Ç‡∏≠‡∏á Element SDK
           ‡πÄ‡∏ä‡πà‡∏ô ‡∏™‡∏µ ‡∏ü‡∏≠‡∏ô‡∏ï‡πå ‡∏Ç‡∏ô‡∏≤‡∏î‡∏ü‡∏≠‡∏ô‡∏ï‡πå ‡∏Ø‡∏•‡∏Ø */
        function mapToCapabilities(config) {
            return {
                recolorables: [
                    {
                        get: () => config.primary_color || defaultConfig.primary_color,
                        set: (value) => {
                            config.primary_color = value;
                            window.elementSdk.setConfig({ primary_color: value });
                        }
                    },
                    {
                        get: () => config.secondary_color || defaultConfig.secondary_color,
                        set: (value) => {
                            config.secondary_color = value;
                            window.elementSdk.setConfig({ secondary_color: value });
                        }
                    },
                    {
                        get: () => config.text_color || defaultConfig.text_color,
                        set: (value) => {
                            config.text_color = value;
                            window.elementSdk.setConfig({ text_color: value });
                        }
                    },
                    {
                        get: () => config.background_color || defaultConfig.background_color,
                        set: (value) => {
                            config.background_color = value;
                            window.elementSdk.setConfig({ background_color: value });
                        }
                    },
                    {
                        get: () => config.accent_color || defaultConfig.accent_color,
                        set: (value) => {
                            config.accent_color = value;
                            window.elementSdk.setConfig({ accent_color: value });
                        }
                    }
                ],
                borderables: [], /* ‡πÄ‡∏ú‡∏∑‡πà‡∏≠‡∏≠‡∏ô‡∏≤‡∏Ñ‡∏ï‡∏ñ‡πâ‡∏≤‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏õ‡∏£‡∏±‡∏ö‡πÄ‡∏™‡πâ‡∏ô‡∏Ç‡∏≠‡∏ö */
                fontEditable: {
                    get: () => config.font_family || defaultConfig.font_family,
                    set: (value) => {
                        config.font_family = value;
                        window.elementSdk.setConfig({ font_family: value });
                    }
                },
                fontSizeable: {
                    get: () => config.font_size || defaultConfig.font_size,
                    set: (value) => {
                        config.font_size = value;
                        window.elementSdk.setConfig({ font_size: value });
                    }
                }
            };
        }

        /* mapToEditPanelValues: ‡∏à‡∏±‡∏î‡∏Ñ‡πà‡∏≤‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô‡πÉ‡∏´‡πâ‡∏ü‡∏¥‡∏•‡∏î‡πå‡πÉ‡∏ô‡πÅ‡∏ú‡∏á‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç (Element SDK) */
        function mapToEditPanelValues(config) {
            return new Map([
                ["competition_title", config.competition_title || defaultConfig.competition_title],
                ["thai_title", config.thai_title || defaultConfig.thai_title],
                ["hero_description", config.hero_description || defaultConfig.hero_description],
                ["register_button", config.register_button || defaultConfig.register_button],
                ["login_button", config.login_button || defaultConfig.login_button]
            ]);
        }

        /* ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô Element SDK ‡∏ñ‡πâ‡∏≤‡∏°‡∏µ‡πÉ‡∏ô‡∏´‡∏ô‡πâ‡∏≤ */
        if (window.elementSdk) {
            window.elementSdk.init({
                defaultConfig,
                onConfigChange,
                mapToCapabilities,
                mapToEditPanelValues
            });
        }
    </script>

  <!-- ‡∏™‡∏Ñ‡∏£‡∏¥‡∏õ‡∏ï‡πå‡∏à‡∏≤‡∏Å Cloudflare (‡πÇ‡∏î‡∏¢ CDN ‡πÅ‡∏ó‡∏£‡∏Å‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥) ‡πÉ‡∏ä‡πâ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö challenge/‡∏õ‡∏Å‡∏õ‡πâ‡∏≠‡∏á‡πÑ‡∏ã‡∏ï‡πå -->
